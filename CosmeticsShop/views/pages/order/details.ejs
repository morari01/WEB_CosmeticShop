<%- include('../../fragments/header.ejs') %>

<main>
    <script type="application/javascript" src="/js/validationOrderForm.js"></script>
    <script type="application/javascript" src="/js/validationCommon.js"></script>
    <h2><%=pageTitle%></h2>

    <form class="form">

        <label for="productName">Nazwa produktu:<span class="symbol-required">*</span> </label>
        <input type="text" name="id_produkt" id="productName" disabled value="<%=order.product.Nazwa%>">
        <span id="errorProductName"></span>

        <label for="producerName">Nazwa producentu:<span class="symbol-required">*</span> </label>
        <input type="text" name="id_producent" id="producerName" disabled value="<%=order.producer.Nazwa_firmy%>">
        <span id="errorProducerName"></span>

        <label for="quantity">Ilosc:<span class="symbol-required">*</span></label>
        <input type="number" name="Ilosc" id="quantity" min="1" max="1000" disabled value="<%=order.Ilosc%>">
        <span id="errorQuantity"></span>

        <label for="dateShipping">Data dostawy:<span class="symbol-required">*</span> </label>
        <input type="date" name="Data_dostawy" id="dateShipping" value="<%=order.Data_dostawy.toISOString().split('T')[0] %>" disabled>
        <span id="errorDateShipping"></span>

        <label for="comment">Komentarz</label>
        <input type="text" name="Komentarz" id="comment" value="<%=order.Komentarz%>" disabled>
        <span id="errorComment"></span>

        <div class="form-buttons">
            <a href="/orders" class="form-button-cancel">Powr√≥t</a>
        </div>
    </form>
</main>

<%- include('../../fragments/footer.ejs') %>